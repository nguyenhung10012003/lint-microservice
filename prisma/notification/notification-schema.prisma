generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/prisma-notification-client"
}

datasource db {
  provider = "mongodb"
  url      = env("NOTIFICATION_DB_URL")
}

model Notification {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  type          String
  postId        String?
  post          Obj
  content       String?
  subject       Obj[]
  subjectCount  Int
  userId        String
  read          Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([type, postId, userId])
}

model Obj {
  id            String
  name          String
  type          String 
  imageUrl      String?
}
