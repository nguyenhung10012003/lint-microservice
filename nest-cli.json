{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": false,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": [
          "certificate/**",
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json",
        "assets": [
          "certificate/**",
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          "certificate/*.pem",
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "relationship": {
      "type": "application",
      "root": "apps/relationship",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/relationship/tsconfig.app.json",
        "assets": [
          "certificate/*.pem",
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "post": {
      "type": "application",
      "root": "apps/post",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/post/tsconfig.app.json",
        "assets": [
          "certificate/*.pem",
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    }
  }
}